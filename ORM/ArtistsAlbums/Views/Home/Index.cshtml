@model Artist
<div id="container">
    <h1>Add a new artist</h1>
    <form asp-controller="Home" asp-action="CreateArtist" method="post">
        <div class="form-group">
            <label asp-for="ArtistName"></label>
            <input asp-for="ArtistName" class="form-control">
        </div>

        <input type="submit" class="btn btn-lg btn-primary">
    </form>

    <table class="table table-dark table-hover">
        <tr>
            <th>Artist Id</th>
            <th>Artst Name</th>
            <th>Albums</th>
        </tr>
        @foreach(Artist art in ViewBag.AllArtists)
        {
            <tr>
                <td>@art.ArtistId</td>
                <td>@art.ArtistName</td>
                <td>
                    @foreach(Album alb in art.CreatedAlbums)
                    {
                        <span>@alb.AlbumName,</span>
                    }
                </td>
            </tr>
        }
    </table>
</div>