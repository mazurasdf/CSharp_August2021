@model Listing

<div class="container">
    <h1>Add a new listing</h1>

    <form asp-controller="Home" asp-action="SubmitListing" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control">
            <span asp-validation-for="Location" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="alert-danger"></span>
        </div>

        <input type="submit" class="btn btn-success">
    </form>
</div>